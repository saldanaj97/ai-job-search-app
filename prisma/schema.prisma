generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id              String           @id @default(uuid())
    name            String?
    email           String           @unique
    jobApplications JobApplication[] @relation("UserJobApplications")
    createdAt       DateTime         @default(now())
    updatedAt       DateTime         @updatedAt
}

model JobApplication {
    id            Int       @id @default(autoincrement())
    jobTitle      String
    company       String?
    location      String?
    salary        String?
    appliedOn     DateTime
    lastHeard     DateTime?
    status        String
    followedUp    Boolean   @default(false)
    followUpCount Int       @default(0)
    userId        String
    user          User      @relation("UserJobApplications", fields: [userId], references: [id])
    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @updatedAt
}
